class Solution {
public:
    string mergeAlternately(string word1, string word2) {
        
        string temp;
        for(int i=0;i<word1.length()||i<word2.length();i++)
        {   
            if(i<word1.length())
        {
            temp+=word1[i];
        }
            if(i<word2.length())
            {
                temp+=word2[i];
            }
        }
        return temp;
    }
};
